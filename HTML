<script>
function calc() {
  const labor = Number(document.getElementById("labor").value || 0);
  const material = Number(document.getElementById("material").value || 0);
  const transport = Number(document.getElementById("transport").value || 0);
  const techfee = Number(document.getElementById("techfee").value || 0);
  const currencyRate = Number(document.getElementById("currency").value);
  const serviceCheckboxes = document.querySelectorAll(".service");
  const agree = document.getElementById("agree").checked;

  if (!agree) {
    alert("Please read and agree to the contract before calculating! / è«‹å…ˆå‹¾é¸åŒæ„åˆç´„æ¢æ¬¾ï¼");
    return;
  }

  let selectedServices = [];
  let serviceSum = 0;
  serviceCheckboxes.forEach(cb => {
    if (cb.checked) {
      selectedServices.push(cb.dataset.name);
      serviceSum += Number(cb.value);
    }
  });

  const baseCost = labor + material + transport + techfee + serviceSum;
  if (baseCost === 0) {
    alert("Please enter values or select services.");
    return;
  }

  const profitFactor = Math.max(1.3, 6000 / baseCost);
  const totalPrice = baseCost * profitFactor * currencyRate;

  const resultDiv = document.getElementById("result");
  resultDiv.style.display = "block";
  resultDiv.innerHTML = `
    <h3 style="margin-top:0; color:#c06c84;">Estimation Result</h3>
    <strong>Selected:</strong> ${selectedServices.length > 0 ? selectedServices.join(", ") : "None"}<br>
    <strong>Base Cost:</strong> NT$${baseCost.toLocaleString()}<br>
    <strong>Profit Factor Applied:</strong> x${profitFactor.toFixed(2)}<br>
    <hr style="border:0; border-top:1px solid #eee; margin:10px 0;">
    <span style="font-size:1.2em; color:#c06c84;"><strong>Total Price: ${totalPrice.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2})}</strong></span>
  `;
}
</script>

